@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<style>
    .btn-primary{
        background: linear-gradient(110deg, #C5D3E8 0%, #34a853 30%, #223249 100%);
    }

    .btn-primary:hover {
			background: linear-gradient(110deg,#223249 100%, #34a853 30%, #C5D3E8 0%);
    }
</style>

<div class="card">

    <h1 class="text-center" style="color:#223249">@ViewData["Title"]</h1>
    <h2 class="text-center" style="color:#223249">Enter your email.</h2>
    <hr />
    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary mb-4">Reset Password</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
