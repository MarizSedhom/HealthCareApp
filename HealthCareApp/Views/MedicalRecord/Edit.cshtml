@model HealthCareApp.Models.MedicalRecord

@{
    ViewData["Title"] = "Edit Medical Record";
}

<div class="container-fluid">
    <h1 class="mb-4">Dr. @ViewBag.Doctor</h1>
    <h4 class="text-teal-600 mb-4">Edit Medical Record</h4>

    <div class="card medical-form-card shadow-lg">
        <div class="card-body">
            <form asp-action="Edit" class="row g-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Left Column (Patient Select) -->
                <div class="col-md-4 pe-4 border-end">
                    <div class="patient-select-wrapper">
                        <div class="form-group patient-select">
                            <input type="hidden" asp-for="DoctorId" />
                  
                            <label asp-for="PatientId" class="control-label">
                                <i class="fas fa-user-injured icon"></i> Patient
                            </label>
                            <div class="custom-select">
                                <select asp-for="PatientId" class="form-control" asp-items="ViewBag.Patients">
                                    <option value="">-- Select Patient --</option>
                                </select>
                                <span class="custom-arrow"><i class="fas fa-chevron-down"></i></span>
                            </div>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>

                        <!-- Patient Summary -->
                        <div class="patient-summary mt-4">
                            <div class="text-center py-3">
                                <i class="fas fa-user-circle fa-4x text-blue-400"></i>
                                @* <p class="mt-2 text-muted">Patient: @Model.Patient?.FullName</p> *@
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column (Form Fields) -->
                <div class="col-md-8 ps-4">
                    <div class="form-group">
                        <label asp-for="Diagnosis" class="control-label">
                            <i class="fas fa-stethoscope me-2"></i>Diagnosis
                        </label>
                        <textarea asp-for="Diagnosis" class="form-control diagnosis-input" rows="3"
                                  placeholder="Enter diagnosis details..."></textarea>
                        <span asp-validation-for="Diagnosis" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <label asp-for="Prescription" class="control-label">
                            <i class="fas fa-prescription-bottle-alt me-2"></i>Prescription
                        </label>
                        <textarea asp-for="Prescription" class="form-control prescription-input" rows="5"
                                  placeholder="List medications and instructions..."></textarea>
                        <span asp-validation-for="Prescription" class="text-danger"></span>
                    </div>

                

                    <div class="form-group mt-5">
                        <button type="submit" class="btn btn-save">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-back ms-3">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

    <style>
        /* Main Container */
        .medical-form-card {
            border-radius: 15px;
            border: none;
            background: #ffffff;
        }

        /* Patient Select Section */
        .patient-select-wrapper {
            position: sticky;
            top: 20px;
        }

        .patient-select {
            position: relative;
            margin-bottom: 2rem;
        }

            .patient-select .control-label {
                display: block;
                margin-bottom: 10px;
                font-weight: 600;
                color: #2c3e50;
                position: relative;
                padding-left: 30px;
            }

                .patient-select .control-label .icon {
                    position: absolute;
                    left: 0;
                    top: 50%;
                    transform: translateY(-50%);
                    color: #3a7bd5;
                    font-size: 1.1rem;
                }

            .patient-select select {
                appearance: none;
                width: 100%;
                padding: 12px 20px;
                border: 2px solid #e0f2fe;
                border-radius: 10px;
                background: #f8fafc;
                font-size: 15px;
                color: #1e3a8a;
                cursor: pointer;
                transition: all 0.3s ease;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            }

                .patient-select select:focus {
                    outline: none;
                    border-color: #3a7bd5;
                    box-shadow: 0 0 0 3px rgba(58, 123, 213, 0.2);
                    background: #ffffff;
                }

        .custom-arrow {
            position: absolute;
            right: 15px;
            top: 70%;
            transform: translateY(-50%);
            color: #3a7bd5;
            pointer-events: none;
        }

}

        /* Patient Summary */
        .patient-summary {
            background: #f8fafc;
            border-radius: 10px;
            padding: 20px;
            border: 1px dashed #cbd5e1;
        }

        /* Right Column Styles */
        .diagnosis-input, .prescription-input {
            border-radius: 10px;
            border: 2px solid #e2e8f0;
            background: #f8fafc;
            transition: all 0.3s;
        }

            .diagnosis-input:focus, .prescription-input:focus {
                border-color: #3a7bd5;
                box-shadow: 0 0 0 3px rgba(58, 123, 213, 0.2);
                background: #ffffff;
            }

        .date-input {
            border-radius: 10px;
            padding: 10px 15px;
        }

        /* Buttons */
        .btn-save {
            background: linear-gradient(135deg, #3a7bd5, #00d2ff);
            color: white;
            border: none;
            padding: 10px 25px;
            border-radius: 10px;
            font-weight: 500;
            transition: all 0.3s;
        }

            .btn-save:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(58, 123, 213, 0.3);
            }

        .btn-back {
            background: #f1f5f9;
            color: #64748b;
            border: none;
            padding: 10px 20px;
            border-radius: 10px;
            font-weight: 500;
            transition: all 0.3s;
        }

            .btn-back:hover {
                background: #e2e8f0;
                color: #475569;
            }

        /* Form Switch */
        .form-check-input:checked {
            background-color: #3a7bd5;
            border-color: #3a7bd5;
        }

        /* Responsive Adjustments */
        @@media (max-width: 768px) {
            .border-end {
                border-right: none !important;
                border-bottom: 1px solid #e2e8f0;
                padding-bottom: 2rem;
                margin-bottom: 2rem;
            }
        }



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}