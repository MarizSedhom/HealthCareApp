@model IEnumerable<HealthCareApp.ViewModel.Doctor.ViewSlotVM>

@{
    ViewData["Title"] = "View Slots";
}

<style>
    :root {
        --doctor-gradient: linear-gradient(135deg, #C5D3E8, #223249);
        --white: #ffffff;
        --light-gray: #f5f5f5;
        --dark-blue: #223249;
        --highlight-blue: #26364d;
        --bg-color-1: #f8f9fa;
        --bg-color-2: #f0f8ff;
        --bg-color-3: #f5fff0;
        --bg-color-4: #fff0f5;
        --danger-red: #dc3545;
        --success-green: #2e7d32;
        --secondary-gray: #6c757d;
    }

    body {
        background-color: var(--light-gray);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .card {
        background: var(--white);
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(197, 211, 232, 0.3);
        overflow: hidden;
    }

    .card-header {
        padding: 1.5rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .card-title {
        color: var(--dark-blue);
        font-size: 1.5rem;
        font-weight: 600;
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        background: var(--doctor-gradient);
        color: var(--white);
    }

    th {
        padding: 1rem;
        text-align: center;
        font-weight: 500;
    }

    tbody tr {
        transition: all 0.2s ease;
    }

        tbody tr:nth-child(even) {
            background-color: rgba(197, 211, 232, 0.1);
        }

        tbody tr:hover {
            background-color: rgba(197, 211, 232, 0.3);
        }

    td {
        padding: 1rem;
        text-align: center;
        vertical-align: middle;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    tbody tr {
        transition: all 0.2s ease;
        cursor: pointer; /* Changes cursor to pointer on hover */
    }

        tbody tr:nth-child(even) {
            background-color: rgba(197, 211, 232, 0.1);
        }

        tbody tr:hover {
            background-color: rgba(197, 211, 232, 0.3);
            transform: translateY(-2px); /* Slight lift effect */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Adds subtle shadow */
        }

    .badge {
        display: inline-block;
        padding: 0.35em 0.65em;
        font-size: 0.75em;
        font-weight: 600;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: 10rem;
    }

    .badge-outline {
        background-color: transparent;
        border: 1px solid var(--dark-blue);
        color: var(--dark-blue);
    }

    .badge-destructive {
        background-color: var(--danger-red);
        color: white;
    }

    .badge-secondary {
        background-color: var(--secondary-gray);
        color: white;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .btn-outline {
        background-color: var(--bg-color-2);
        color: var(--dark-blue);
        border: 1px solid var(--bg-color-2);
    }

        .btn-outline:hover {
            background-color: rgba(197, 211, 232, 0.3);
        }

    .btn-destructive {
        width: auto;
        height: 2rem;
        border-radius: 50%;
        background-color: rgba(220, 53, 69, 0.1);
        color: var(--danger-red);
        border: 1px solid rgba(220, 53, 69, 0.2);
    }

        .btn-destructive:hover {
            background-color: var(--danger-red);
            color: white;
        }

    .text-center {
        text-align: center;
    }

    .mt-6 {
        margin-top: 1.5rem;
    }

    .gap-2 {
        gap: 0.5rem;
    }

    .blocked-button {
        background-color: #cccccc;
        color: #666666;              
        border: 1px solid #bbbbbb;    
        cursor: not-allowed;
        opacity: 0.6;
        pointer-events: none;
        box-shadow: none;
        transition: none;            
    }

    .back-link-admin {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 2rem;
        color: var(--patient-green);
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        border: 2px #223249 solid;
    }

        .back-link-admin:hover {
            background-color: #D0E8C5;
            transform: translateX(-5px);
            text-decoration: none;
            color: var(--dark-blue);
            border: none;
        }

    .disabled-row {
        pointer-events: none; 
        opacity: 0.6; 
        background-color: #f5f5f5; 
        cursor: not-allowed; 
    }

</style>

<div class="card-container">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">View Slots</h2>
        </div>
        <div class="card-content">
            <table>
                <thead>
                    <tr >
                        <th>Time Range</th>
                        <th>Status</th>
                        <th>Patient Name</th>
                        <th>Patient Number</th>
                        <th>Actions</th>
                        <th>Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var slot in Model)
                    {
                        <tr class=@(slot.startTime<=TimeOnly.FromDateTime(DateTime.Now)?"disabled-row":"")>
                            <td>@slot.TimeRange</td>
                            <td>
                                @if (slot.Status == "Available")
                                {
                                    <span class="badge badge-outline">Available</span>
                                }
                                else if (slot.Status == "Booked")
                                {
                                    <span class="badge badge-destructive">Booked</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Cancelled</span>
                                }
                            </td>
                            <td>@(slot.PatientName ?? "N/A")</td>
                            <td>@(slot.PatientNumber ?? "N/A")</td>
                            @if(slot.startTime>TimeOnly.FromDateTime(DateTime.Now)){
                                <td>
                                    @if (slot.Status != "Cancelled")
                                    {
                                        <a href="#"
                                           class="btn btn-destructive"
                                           title="Cancel Slot"
                                           data-bs-toggle="modal"
                                           data-bs-target="#deleteModal"
                                           data-id="@slot.SlotId"> × Cancel</a>
                                    }
                                </td>
                                <td>
                                    @if (slot.IsBooked)
                                    {
                                        <a asp-action="RescheduleAppointment" class="btn btn-destructive" asp-route-slotId="@slot.SlotId">
                                            Reschedule Slot
                                        </a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-destructive blocked-button text-muted">
                                            Reschedule Slot
                                        </button>
                                    }
                                </td>
                            }
                            else{
                                <td>
                                    <button class="btn btn-destructive blocked-button text-muted">
                                        Reschedule Slot
                                    </button>
                                </td>
                                <td>
                                    <button class="btn btn-destructive blocked-button text-muted">
                                        Reschedule Slot
                                    </button>
                                </td>
                            }

                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-center mt-4 mb-4">
                <a asp-action="GetAvailabilitiesForDr" asp-route-doctorId="@ViewBag.drId"
                   class="btn btn-outline gap-2">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>

            </div>
        </div>
    </div>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="doctor" asp-action="ViewApprovedDoctorsAdmin"
                       class="back-link-admin text-center">
                        <i class="fas fa-arrow-left"></i>
                        Back to Doctor List
                    </a>

                }
</div>




<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CancelSlotPost" method="get">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Cancelation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to Cancel this Day?
                    <input type="hidden" name="slotId" id="recordIdToDelete" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
  <script>
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var id = button.getAttribute('data-id');
        var input = deleteModal.querySelector('#recordIdToDelete');
        input.value = id;
    });
</script>

}