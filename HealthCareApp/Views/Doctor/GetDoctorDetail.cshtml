        @*     @if(!admin){ *@
        @*         <a asp-action="UpdateDoctorProfile"  *@
        @*         class="btn btn-lg btn-dark-blue px-5 py-3 rounded-pill shadow-sm text-white"> *@
        @*             <i class="fas fa-edit me-2"></i>Update Profile *@
        @*         </a> *@
        @*     } *@
        @*     else *@
        @*     { *@
