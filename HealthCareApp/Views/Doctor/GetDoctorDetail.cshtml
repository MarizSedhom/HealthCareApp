        @*            class="btn px-5 py-3 rounded-pill shadow-sm back-link"> *@
        @*             <i class="fas fa-arrow-left"></i>Back *@
        @*         </a> *@
            
        @*     } *@

        @* </div> *@
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}