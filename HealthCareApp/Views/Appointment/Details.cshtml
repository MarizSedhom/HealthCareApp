@model HealthCareApp.Models.Appointment

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Appointment Details</h1>

<div>
    <div class="card p-4 shadow">
        <dl class="row">
            <dt class="col-sm-3 text-warning">Status</dt>
            <dd class="col-sm-9">@Model.status</dd>

            <dt class="col-sm-3">Patient Name</dt>
            <dd class="col-sm-9">@Model.PatientName</dd>

            <dt class="col-sm-3">Patient Phone</dt>
            <dd class="col-sm-9">@Model.PatientPhone</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AvailableSlot.Availability.Date)</dt>
            <dd class="col-sm-9">@Model.AvailableSlot?.Availability?.Date</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AvailableSlot.Availability.dayOfWeek)</dt>
            <dd class="col-sm-9">@Model.AvailableSlot?.Availability?.dayOfWeek</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AvailableSlot.StartTime)</dt>
            <dd class="col-sm-9">@Model.AvailableSlot?.StartTime</dd>

            <dt class="col-sm-3">Doctor</dt>
            <dd class="col-sm-9">
                @($"{Model.AvailableSlot?.Availability?.Doctor?.FirstName ?? ""} {Model.AvailableSlot?.Availability?.Doctor?.LastName ?? ""}")
            </dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AvailableSlot.Availability.Doctor.Fees)</dt>
            <dd class="col-sm-9">@Model.AvailableSlot?.Availability?.Doctor?.Fees</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.paymentMethod)</dt>
            <dd class="col-sm-9">@Model.paymentMethod</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.paymentStatus)</dt>
            <dd class="col-sm-9">@Model.paymentStatus.ToString()</dd>
        </dl>
</div>
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a> |
        <a asp-action="Index" asp-route-id="@Model.PatientId" class="btn btn-secondary">Back to List</a>
</div>
