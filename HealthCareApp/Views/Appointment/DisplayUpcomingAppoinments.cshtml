@model IEnumerable<HealthCareApp.ViewModel.Appointment.UpcomingAppointmentsVM>

@{
    ViewData["Title"] = "DisplayUpcomingAppoinments";
}

<h3 class="text-center mb-5 text-primary-emphasis">Upcoming Appoinments</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.paymentStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.paymentMethod)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(app => app.Date))
        {
            <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mode)
                    </td>

                    @if(item.Date == DateOnly.FromDateTime(DateTime.Now))
                    {
                        <td> Today </td>
                    }
                    else if (item.Date == DateOnly.FromDateTime(DateTime.Now).AddDays(1))
                    {
                        <td> Tomorrow </td>
                    }
                    else
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.Day)
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatientName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatientPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.paymentStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.paymentMethod)
                    </td>
                    <td>
                    <a asp-controller="Patient" asp-action="DisplayPatientInfoForDoctor" asp-route-patientId="@item.PatientId" class="btn btn-warning">Patient Info</a>
                    </td>
            </tr>
        }
    </tbody>
</table>
