@model SubSpecialization

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SubSpecialization</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-page="@ViewBag.CurrentPage">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialization.Name" class="control-label"></label>
                <select asp-for="SpecializationId" asp-items="@(new SelectList(ViewBag.Specializations,"Id","Name"))" class="p-1">
                </select>
                <span asp-validation-for="SpecializationId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-1">
    <a asp-action="Index" asp-route-page="@ViewBag.CurrentPage">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}