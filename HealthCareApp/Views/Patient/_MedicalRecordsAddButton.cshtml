@{
    var patientId = ViewBag.PatientId;
    var doctorId = ViewBag.DoctorId;
}
<button type="button"
        class="btn btn-outline-success btn-sm redirect-btn"
        title="Add New Record"
        data-patient-id="@patientId"
        data-doctor-id="@doctorId">
    <i class="fas fa-plus"></i> Add
</button>

<script>
    // Attach click handler after button is loaded
    $(document).on('click', '.redirect-btn', function () {
        const patientId = $(this).data('patient-id');
        const doctorId = $(this).data('doctor-id');

        // Redirect with query string
        window.location.href = `/Clinic/Create`;
    });
</script>



