@model List<PatientVM>

<style>
    button:focus:not(:focus-visible) {
    outline: none;
    box-shadow: none;
    }

</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-3">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">@item.FullName</h5>
                </div>
                <div class="card-body">
                    <h6 class="card-title">Age: @item.Age</h6>
                    <p class="card-text"><strong>Emergency Contact:</strong> @item.EmergencyContact</p>

                    <div class="d-flex justify-content-between mt-4">

                        <button type="button"
                        class="btn btn-outline-info btn-sm"
                        data-bs-toggle="modal"
                        data-bs-target="#medicalModal_@item.Id"
                        title="View Medical History">
                            <i class="fas fa-file-medical-alt"></i> History
                        </button>

                        @if (item.IsFirst == true)
                        {
                            <button type="button"
                                    class="btn btn-outline-success btn-sm redirect-btn"
                                    title="Add New Record"
                                    data-action="Create"
                                    data-patient-id="@item.Id"
                                    data-doctor-id="@ViewBag.DoctorId">
                                <i class="fas fa-plus"></i> Add
                            </button>
                        }
                        else
                        {
                            <button type="button"
                                    class="btn btn-outline-primary btn-sm redirect-btn"
                                    title="View Records"
                                    data-action="Index"
                                    data-patient-id="@item.Id"
                                    data-doctor-id="@ViewBag.DoctorId">
                                <i class="fas fa-clipboard"></i> Records
                            </button>
                        }

                    </div>
                </div>
            </div>

            <!-- Medical History Modal -->
            <div class="modal fade" id="medicalModal_@item.Id" tabindex="-1" aria-labelledby="medicalModalLabel_@item.Id" aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable modal-md">
                    <div class="modal-content border border-info rounded-3 shadow-sm">
                        <div class="modal-header bg-info bg-opacity-10 text-info border-bottom border-info rounded-top-3">
                            <h5 class="modal-title fw-semibold" id="medicalModalLabel_@item.Id">
                                <i class="fas fa-file-medical-alt me-1"></i> Medical History - @item.FullName
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                       
                        @if (!string.IsNullOrWhiteSpace(item.MedicalHistory)) 
                        {
                            <div class="modal-body text-start d-flex align-items-start justify-content-start px-4 py-2"
                                 style="white-space: pre-wrap; min-height: 100px; max-height: 300px; overflow-y: auto; word-break:break-word">
                             <p class="mb-0">@item.MedicalHistory</p>
                            </div>
                        } 
                        else
                        {
                            <div class="modal-body text-start small d-flex justify-content-center"
                                 style="min-height: 100px; max-height: 300px; overflow-y: auto;">
                            <div class="alert alert-success text-center my-auto">
                                <i class="fas fa-info-circle"></i> New patient (no medical history available).
                            </div>
                            </div>
                        }

                        <div class="modal-footer justify-content-end py-2 px-3 border-top border-info">
                            <button type="button" class="btn btn-outline-info btn-sm" data-bs-dismiss="modal">
                                <i class="fas fa-times me-1"></i> Close
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
</div>

@{
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
    int pagesPerGroup = 5;

    int currentGroup = (int)Math.Ceiling((double)currentPage / pagesPerGroup);
    int startPage = (currentGroup - 1) * pagesPerGroup + 1;
    int endPage = Math.Min(startPage + pagesPerGroup - 1, totalPages);
}

<nav class="mt-3">
    <ul class="pagination justify-content-center">

        <!-- First Page -->
        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="javascript:void(0);" onclick="loadSearchPage(1)">«</a>
        </li>

        <!-- Previous 5 -->
        <li class="page-item @(startPage <= 1 ? "disabled" : "")">
            <a class="page-link" href="javascript:void(0);" onclick="loadSearchPage(@(Math.Max(1, startPage - pagesPerGroup)))">‹‹</a>
        </li>

        <!-- Previous -->
        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="javascript:void(0);" onclick="loadSearchPage(@(currentPage - 1))">‹</a>
        </li>

        @for (int i = startPage; i <= endPage; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" href="javascript:void(0);" onclick="loadSearchPage(@i)">@i</a>
            </li>
        }

        <!-- Next -->
        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
            <a class="page-link" href="javascript:void(0);" onclick="loadSearchPage(@(currentPage + 1))">›</a>
        </li>

        <!-- Next 5 -->
        <li class="page-item @(endPage >= totalPages ? "disabled" : "")">
            <a class="page-link" href="javascript:void(0);" onclick="loadSearchPage(@(startPage + pagesPerGroup))">››</a>
        </li>

        <!-- Last Page -->
        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
            <a class="page-link" href="javascript:void(0);" onclick="loadSearchPage(@totalPages)">»</a>
        </li>
    </ul>
</nav>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.redirect-btn').forEach(function (button) {
            button.addEventListener('click', function () {
                const patientId = this.getAttribute('data-patient-id');
                const doctorId = this.getAttribute('data-doctor-id');
                const action = this.getAttribute('data-action');

                const controller = "Clinic";
                const url = `/${controller}/${action}?patientId=${patientId}&doctorId=${doctorId}`;
                window.location.href = url;
            });
        });
    });
</script>

