@{
    var patientId = ViewBag.PatientId;
    var doctorId = ViewBag.DoctorId;
}

<button type="button"
        class="btn btn-outline-primary btn-sm redirect-btn"
        title="Add New Record"
        data-patient-id="@patientId"
        data-doctor-id="@doctorId">
    <i class="fas fa-clipboard"></i> Records
</button>

<script>
    // Attach click handler to dynamically loaded button
    $(document).on('click', '.redirect-btn', function () {
        const patientId = $(this).data('patient-id');
        const doctorId = $(this).data('doctor-id');

        // Redirect to your target URL with query params
        window.location.href = `/Specialization/Create`;
    });
</script>
