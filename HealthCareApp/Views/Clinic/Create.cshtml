@model HealthCareApp.Models.Clinic

@{
    ViewData["Title"] = "Create";
}

<h3>Add Clinic</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-page="@ViewBag.CurrentPage">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClinicAddress" class="control-label"></label>
                <input asp-for="ClinicAddress" class="form-control" />
                <span asp-validation-for="ClinicAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClinicCity" class="control-label"></label>
                <input asp-for="ClinicCity" class="form-control" />
                <span asp-validation-for="ClinicCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClinicRegion" class="control-label"></label>
                <input asp-for="ClinicRegion" class="form-control" />
                <span asp-validation-for="ClinicRegion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClinicPhoneNumber" class="control-label"></label>
                <input asp-for="ClinicPhoneNumber" class="form-control" />
                <span asp-validation-for="ClinicPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-1">
    <a asp-action="Index" asp-route-page="@ViewBag.CurrentPage">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
